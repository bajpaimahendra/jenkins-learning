pipeline {
    agent any

    parameters {
        choice(
            name: 'branchName',
            choices: ['DEV', 'QA', 'STAGE', 'PROD'],
            description: 'Select the environment to deploy'
        )
    }

    stages {
        stage('SCM') {
            steps {
                echo 'scm ..................1111111111111'
                echo "$PATH"
            }
        }

        stage('Parameter') {
            steps {
                echo 'Parameter ..............'
                //echo "$WORKSPACE"
                echo "branch ======= ${params.branchName}"

            }
        }


        stage('Print job') {
            steps {
                echo "You selected job: ${params.JOB_LIST}"
            }
        }
        
        stage('workspace') {
            steps {
                echo 'build ..............'
                echo "$WORKSPACE"
            }
        }  
        
        stage('create-file') {
            agent { label 'mymachinenode' }
            steps {
                echo 'build ..............'
                sh '''
                ls -l
                '''
                
                // sh '''
                //     touch file1 file2
                //     sleep 30
                // '''
            }
        }        
        
    }
}
